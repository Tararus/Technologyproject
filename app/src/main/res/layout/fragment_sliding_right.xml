<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_slidingmenu_left"
    tools:context="com.example.administrator.mytechnologyproject.fragment.SlidingRightFragment">
    <RelativeLayout
        android:id="@+id/layout_unlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp">
        <com.example.administrator.mytechnologyproject.view.XCRoundRectImageView
            android:id="@+id/iv_loginImageView"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/biz_pc_main_info_profile_avatar_bg_dark"/>
        <TextView
            android:id="@+id/tv_loginTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/iv_loginImageView"
            android:textColor="#ffffffff"
            android:textSize="25sp"
            android:text="立即登录"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:paddingBottom="100dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="版本更新"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:id="@+id/tv_update" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/share_little_bg"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp">
            <ImageView
                android:id="@+id/fun_weixin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:src="@drawable/fun_share_weixin"/>
            <ImageView
                android:id="@+id/fun_qq"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:src="@drawable/addimport_qq"/>
            <ImageView
                android:id="@+id/fun_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:src="@drawable/fun_share_friends"/>
            <ImageView
                android:id="@+id/fun_weibo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:src="@drawable/fun_share_weibo"/>

        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/layout_logined"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp">
        <com.example.administrator.mytechnologyproject.view.XCRoundRectImageView
            android:id="@+id/iv_loginedImageView"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/biz_pc_main_info_profile_avatar_bg_dark"/>
        <TextView
            android:id="@+id/tv_loginedName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/iv_loginedImageView"
            android:textColor="#ffffffff"
            android:textSize="25sp"
            android:text="喵喵已登录"/>

    </RelativeLayout>

</RelativeLayout>
