<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp">
    <ImageView
        android:id="@+id/iv_news_icon"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/tv_news_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新闻标题"
        android:layout_toRightOf="@+id/iv_news_icon"
        android:layout_alignTop="@+id/iv_news_icon"
        android:singleLine="true"
        android:textSize="18sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tv_news_stamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016-06-17 17:31:20.0"
        android:layout_alignLeft="@+id/tv_news_title"
        android:layout_below="@+id/tv_news_title"/>
    <TextView
        android:id="@+id/tv_news_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新闻内容..."
        android:singleLine="true"
        android:textSize="15sp"
        android:layout_alignLeft="@+id/tv_news_stamp"
        android:layout_below="@+id/tv_news_stamp"/>
    <TextView
        android:id="@+id/link_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="详情点击："
        android:layout_alignLeft="@+id/tv_news_stamp"
        android:layout_below="@+id/tv_news_summary"/>
    <TextView
        android:id="@+id/tv_news_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="http://..........."
        android:layout_alignLeft="@+id/tv_news_stamp"
        android:layout_below="@+id/link_guide"/>

</RelativeLayout>
